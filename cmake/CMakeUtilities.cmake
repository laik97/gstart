function(findSFML)
find_package(SFML PATHS "libs/SFML-2.5.1" NO_DEFAULT_PATH COMPONENTS graphics window system REQUIRED)
message("")
message("   SFML_DIR ${SFML_DIR}")
message("   SFML_INCLUDE_DIR ${SFML_INCLUDE_DIR}")
message("   SFML_LIBRARY_DIR ${SFML_LIBRARY_DIR}")
set(SFML_STATIC_LIBRARIES true)
set(SFML_BUILD_GRAPHICS true)
set(SFML_BUILD_NETWORK true)
set(SFML_BUILD_WINDOW true)
set(SFML_BUILD_AUDIO true)
endfunction(findSFML)

